<resources>

    <style name="GeeksEmpire.Material" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:colorPrimary">@color/default_color</item>
        <item name="android:colorPrimaryDark">@color/default_color_dark</item>
        <item name="android:colorAccent">@color/default_color_light</item>

        <item name="colorPrimary">@color/default_color</item>
        <item name="colorPrimaryDark">@color/default_color_dark</item>
        <item name="colorAccent">@color/default_color_light</item>

        <item name="android:windowBackground">@drawable/splash_screen</item>

        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>

    </style>

    <style name="GeeksEmpire.Material.SignIn" parent="GeeksEmpire.Material">

        <item name="android:statusBarColor">@color/default_color_light</item>
        <item name="android:navigationBarColor">@color/default_color_light</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <item name="android:windowBackground">@color/light</item>

    </style>

    <style name="GeeksEmpire.Material.Maps" parent="GeeksEmpire.Material">

        <item name="android:statusBarColor">@color/default_color_light</item>
        <item name="android:navigationBarColor">@color/default_color_light</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowBackground">@color/light</item>

    </style>

    <style name="GeeksEmpire.Material.PublicCommunity" parent="GeeksEmpire.Material">

        <item name="android:statusBarColor">@color/default_color_light</item>
        <item name="android:navigationBarColor">@color/default_color_light</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowBackground">@color/light</item>

    </style>

    <style name="GeeksEmpire.Material.Preferences" parent="GeeksEmpire.Material">

        <item name="android:statusBarColor">@color/default_color_light</item>
        <item name="android:navigationBarColor">@color/default_color_light</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowBackground">@color/light</item>

    </style>

</resources>