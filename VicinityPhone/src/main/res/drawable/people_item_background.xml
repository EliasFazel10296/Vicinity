<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/temporaryBackground">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="3dp"
                android:topRightRadius="3dp"
                android:bottomLeftRadius="1dp"
                android:bottomRightRadius="1dp"/>

            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="@color/dark_transparent"
                android:centerColor="@color/dark_transparent"
                android:endColor="@color/dark_transparent_high"/>

        </shape>
    </item>

    <item
        android:id="@+id/temporaryForeground"
        android:bottom="5dp">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="3dp"
                android:topRightRadius="3dp"
                android:bottomLeftRadius="13dp"
                android:bottomRightRadius="13dp"/>

            <solid
                android:color="@color/default_color_transparent_high"/>

        </shape>
    </item>

</layer-list>