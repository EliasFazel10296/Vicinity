<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="13dp"
    tools:context=".CommunicationConfiguration.HistoryConfiguration.HistoryUI.HistoryLists">

    <net.geekstools.imageview.customshapes.ShapesImage
        android:id="@+id/communicationLogo"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_margin="3dp"
        android:scaleType="centerCrop"

        apps:shape="circle"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/communicationName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="19dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/dark"
        android:textSize="23sp"
        android:fontFamily="serif-monospace"

        apps:layout_constraintTop_toTopOf="@id/communicationLogo"
        apps:layout_constraintBottom_toBottomOf="@id/communicationLogo"
        apps:layout_constraintStart_toEndOf="@id/communicationLogo"/>

</androidx.constraintlayout.widget.ConstraintLayout>